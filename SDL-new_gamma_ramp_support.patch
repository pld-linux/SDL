+		if (!succeeded) {
+			SDL_free(gamma_ramp_saved_vm);
+			gamma_ramp_saved_vm = NULL;
+		} else {
+			return(0);
+		}
+	}
+#endif /* SDL_VIDEO_DRIVER_X11_VIDMODE */
+
+	return(-1);
